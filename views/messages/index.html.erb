<h1>Message-Board</h1>
<h2><font color="blue">新規メッセージはこちらから</font></h2>
<%= form_for(@message) do |f| %>
  名前:
  <%= f.text_field :name %>
  内容:
  <%= f.text_field :body %><br><br>
  <%= f.submit "提出っ！"%>
  <br>
<% if notice %>
      <div class="alert alert-info">
        <%= notice %>
      </div>
    <% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <%= link_to "delete☆" , message , method: :delete, data: { confirm: 'ほんとうに・・・削除してもいいんですか？' } %>
      <br>
    <% end %>
  </div>
</div>
  
<% end %>

